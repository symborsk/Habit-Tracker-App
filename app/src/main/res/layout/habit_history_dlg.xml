<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/habitCompletionList"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/shape_border"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/holo_blue_dark"
        android:padding="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="60dp"/>

    <TextView
        android:text="Habit Name Here"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="65dp"
        android:id="@+id/historyName"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_height="60dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="550dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="22sp" />

    <Button
        android:text="Close"
        android:layout_height="wrap_content"
        android:layout_width="130dp"
        android:id="@+id/closeHistory"
        android:layout_alignBottom="@+id/deleteCompButton"
        android:layout_alignParentEnd="true"/>


    <Button
        android:text="Delete"
        android:layout_height="wrap_content"
        android:layout_width="130dp"
        android:id="@+id/deleteCompButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
